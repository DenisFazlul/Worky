@model Worky.Models.Account.UserProfileModel
@{
    ViewData["Title"] = "Profile";
}
  

<div style="margin-left:75px">



<h1>Профиль</h1>



<div class="DCard " style="padding:20px" >
    
    <div style="display:grid; grid-template-columns:1fr 1fr">
        <div style="grid-column:1">
            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
            </svg>
        </div>
        <div style="grid-column:2; display:grid; ">
            <a>@Model.UserName</a>
            <a>@Model.UserEmail</a>
            @if(Model.IsAdmin)
            {
                      <a href="~/Admin/index">Управление пользователями</a>
                }
          
         </div>
    </div>
   
 

</div>
<div style="position:absolute; left:15px; top:100px">
         <div style="display:flex;flex-direction:column; gap:9px">
        <a asp-action="ChangePass" class="Dbtn">
           Изменить пароль
         </a>
         <a asp-action="ChangeUserData" class="Dbtn">
           Изменить данные
         </a>
    </div>
</div>
</div>

