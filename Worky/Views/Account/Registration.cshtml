@model Worky.Models.RegistrationModel

@{
    ViewData["Title"] = "Registration";
}
@{
    Layout = "_Layout_Login";
}

<div class="bd">


<div class="form-signin">
   

<div class="row">
    <div class="DCard">
         <h2>Регистрация</h2>
         <hr />
        <form asp-action="Registration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-group_padding">
                
                <input asp-for="Email" class="form-control" placeholder="Имейл" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-group_padding">
               
                <input asp-for="Pass" class="form-control" placeholder="Пароль" />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            <div class="form-group form-group_padding">
               
                <input asp-for="ConfirmPass" class="form-control"placeholder="Повторите пароль" />
                <span asp-validation-for="ConfirmPass" class="text-danger"></span>
            </div>
            <div class="form-group form-group_padding">
                <input type="submit" value="Зарегистрироваться" class="Dbtn" style="width:100%" />
            </div>
            <div class="form-group form-group_padding">
                <a asp-action="Login">Вход</a>
            </div>
        </form>
    </div>
</div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
