@model Worky.Models.DocModels.EditPageModel
@using Worky.Models.DocModels;
@{
    ViewData["Title"] = "Index";
}

<head>
   <link rel="stylesheet" href="~/js/ql.js" />
   <script type="text/javascript">
          
  </script>
</head>
 
<div  >
<h4>Редактирование</h4>
<hr />
<div class="row">
    <div >
        <form asp-action="Index" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" hidden class="control-label"></label>
                <input asp-for="Id" hidden class="form-control" />
                <span asp-validation-for="Id" hidden class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Description" hidden  class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description"  class="text-danger"></span>
            
                 
            </div>
            <input asp-for="bookId" hidden class="form-control" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"  />
            </div>
        </form>
    </div>
</div>

 
<div>
    <a href="~/Documentation/Watch?bookId=@Model.bookId&selectedPage=@Model.Id">к документации</a>
</div>
</div>
  

<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

 
<a href="~/DocEdit/SelectPageContentTypeToAdd?PageId=@Model.Id">Добавить контент</a>

@foreach(PageContentModel c  in @Model.Content)
{
    <div class="DBorder">

        <div style="display:grid; grid-template-columns:1fr auto">
            <div>
                   @Html.Partial("~/Views/Documentation/DetailPageContent.cshtml",c)
            </div>
            <div style="display:grid;grid-template-rows:auto 1fr auto">
                <div>
                     <a href="~/DocEdit/EditPageContent?PageContentId=@c.id">
                     <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                          <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                          <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                     </svg>
                     </a>
                </div>
                <div></div>
                <div>
                     <a href="">
                         <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                          <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                          <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                        </svg>
                     </a>
                </div>
                 

            </div>
        </div>
         
      
    </div>

}

 
