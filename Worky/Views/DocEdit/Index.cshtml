@model Worky.Models.DocModels.EditPageModel

@{
    ViewData["Title"] = "Index";
}

<head>
   <link rel="stylesheet" href="~/js/ql.js" />
   <script type="text/javascript">
          
  </script>
</head>
 
<div  >
<h4>Редактирование</h4>
<hr />
<div class="row">
    <div >
        <form asp-action="Index" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" hidden class="control-label"></label>
                <input asp-for="Id" hidden class="form-control" />
                <span asp-validation-for="Id" hidden class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Description" hidden  class="control-label"></label>
                <input asp-for="Description" hidden id="ds" class="form-control" />
                <span asp-validation-for="Description"  class="text-danger"></span>
                <a>Description</a>
                <div id="editor">
   
                </div>
            </div>
            <input asp-for="bookId" hidden class="form-control" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"   onclick="GetValue()"  />
            </div>
        </form>
    </div>
</div>

 
<div>
    <a href="~/Documentation/Watch?bookId=@Model.bookId&selectedPage=@Model.Id">к документации</a>
</div>
</div>
  

<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

<!-- Create the editor container -->


<!-- Include the Quill library -->
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<!-- Initialize Quill editor -->
<script>
  var quill = new Quill('#editor', {
    theme: 'snow'
  });

  load();
  function load()
  {
      let val=document.getElementById("ds").value;
      
      
      const delta = quill.clipboard.convert(val)

      quill.setContents(delta, 'silent')
  }
  function GetValue()
  {
       
      let ht=quill.container.firstChild.innerHTML;
      document.getElementById("ds").value=ht;
  }
</script>