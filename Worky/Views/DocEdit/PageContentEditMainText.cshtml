@using Worky.Models.DocModels;
@model PageContentModel;


 <form asp-action="EditPageContent" method="post">

     <input asp-for="@Model.id"  hidden/>
     <input asp-for="@Model.PageId" hidden />
     <input asp-for="@Model.ContentType" hidden  />  
      
     <input asp-for="@Model.Content" id="ds"  hidden/>
     <div id="editor">
   
     </div>
    
     <input type="submit"  value="Сохранить" onclick="GetValue()"/>
 </form>
@{
}
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

<!-- Create the editor container -->


<!-- Include the Quill library -->
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<!-- Initialize Quill editor -->
<script>
  var quill = new Quill('#editor', {
    theme: 'snow'
  });

  load();
  function load()
  {
      let val=document.getElementById("ds").value;
      
      
      const delta = quill.clipboard.convert(val)

      quill.setContents(delta, 'silent')
  }
  function GetValue()
  {
       
      let ht=quill.container.firstChild.innerHTML;
      document.getElementById("ds").value=ht;
  }
</script>