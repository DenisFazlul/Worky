@model Worky.Models.Project.EditProjectModel

@{
    ViewData["Title"] = "EditProject";
}



<h4>Описание проекта</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PorjecId" class="control-label" hidden></label>
                <input asp-for="PorjecId" class="form-control" hidden />
                <span asp-validation-for="PorjecId" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="Dbtn" style="width:100%" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Projects/Delete?id=@Model.PorjecId" style="position: fixed;right: 10px;bottom: 77px;">
        Удалить прокет
    </a>
</div>

