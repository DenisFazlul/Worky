@using Worky.Models.DocModels;

@model PageModel
@{
}

<div  >
    
    <div class=""  >
        
        
        <a style="color:@GetSelString(@Model); text-decoration:none" href="~/Documentation/Watch?bookId=@Model.bookId&selectedPageId=@Model.Id">@Model.Name</a>
        
        
       
         <a href="~/Documentation/AddPage?ParrentPageId=@Model.Id" style="text-decoration:none;">
             <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
              <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
              <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg>
         </a>
             
          
        
     
    </div>
    <ul style="list-style:none;">

     
    @foreach(PageModel child in @Model.Pages.ToList())
    {
        <li> 
        @Html.Partial("PageTreeItem",child)
        </li>
    }
    </ul>
</div>

@{
    string GetSelString(PageModel model)
    {
        if(model.IsSelected)
        {
            return "red";
        }
        else
        {
            return "";
        }
    }
}