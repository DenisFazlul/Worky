@model Worky.Models.AddTaskFileModel

@{
    ViewData["Title"] = "AddTaskFile";
}

<h1>AddTaskFile</h1>

<h4>AddTaskFileModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTaskFile" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Path" class="control-label"></label>
                <input name="uploadedFile" class="form-control" type="file" />
                <span asp-validation-for="Path" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskId" class="control-label"></label>
                <input asp-for="TaskId" class="form-control" hidden />
                <span asp-validation-for="TaskId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

